<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:gravity="top" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/front_color" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Make Order"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/back_color"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <EditText
        android:id="@+id/odname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Enter Name" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/odaddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/odname"
        android:layout_below="@+id/odname"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Address" />

    <EditText
        android:id="@+id/odphone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odaddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Phone " />

    <Button
        android:id="@+id/odbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/odphone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Submit" 
        android:textColor="@color/back_color"
        android:textSize="20dp"
        android:background="@drawable/arc_detail"
        android:textStyle="bold"/>

</RelativeLayout>